{
  "name": "token-bridge-ui",
  "description": "Transfer OCEAN Tokens between Ethereum's Main network, and Ocean's Pacific network.",
  "version": "2.1.1",
  "private": true,
  "homepage": "https://oceanprotocol.com/",
  "scripts": {
    "select-css-theme": "node scripts/selectTheme.js",
    "build-css": "node-sass-chokidar src/assets/stylesheets -o src/assets/stylesheets --output-style=compressed -m application*.css",
    "watch-css": "node-sass-chokidar src/assets/stylesheets -o src/assets/stylesheets -m application*.css --watch",
    "start": "npm run build-css && npm run select-css-theme && react-app-rewired start",
    "build": "npm run compile:contracts && npm run build-css && npm run select-css-theme && react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "startE2e": "mocha -b ./e2e-script/test.js",
    "start:blocks": "node ./e2e-script/scripts/blocks.js",
    "coverage": "react-app-rewired test --env=jsdom --coverage",
    "eject": "react-app-rewired eject",
    "compile:contracts": "cd submodules/token-bridge-contracts && npm install && npm run compile && cd ../../ && rm -r -f src/contracts && cp -r submodules/token-bridge-contracts/build/contracts src/contracts",
    "postinstall": "cp lib/web3-eth/index.js node_modules/web3-eth/src && npm run compile:contracts",
    "release": "release-it --non-interactive",
    "changelog": "auto-changelog -p"
  },
  "dependencies": {
    "@oceanprotocol/typographies": "^0.1.0",
    "bignumber.js": "^9.0.0",
    "mobx": "^5.10.1",
    "mobx-react": "^6.1.1",
    "numeral": "^2.0.6",
    "react": "^16.8.6",
    "react-app-rewire-mobx": "^1.0.9",
    "react-app-rewired": "^2.1.3",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-transition-group": "^4.1.1",
    "sweetalert": "^2.1.2",
    "web3": "1.0.0-beta.30",
    "web3-utils": "1.0.0-beta.30"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@testing-library/react": "^8.0.1",
    "auto-changelog": "^1.13.0",
    "chromedriver": "^2.35.0",
    "customize-cra": "^0.2.13",
    "dotenv": "^8.0.0",
    "fs-extra": "^8.0.1",
    "jest-dom": "^3.5.0",
    "mocha": "^6.1.4",
    "node-sass-chokidar": "^1.3.5",
    "nodemon": "^1.19.1",
    "release-it": "^12.3.0",
    "selenium-webdriver": "^3.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oceanprotocol/token-bridge-ui"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "release-it": {
    "hooks": {
      "after:init": "npm test",
      "after:bump": "npm run changelog"
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
